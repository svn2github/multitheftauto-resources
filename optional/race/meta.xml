	<settings>
		<setting name="*hurrytime" value="15000"/>
		<setting name="*timeafterfirstfinish" value="30000"/>

        <!-- ghostmode
                false   - Collisions enabled.
                true    - Collisions disabled. -->
        <setting name="*ghostmode" value="false"/>

        <!-- ghostalpha
                false   - No effect.
                true    - Make vehicle semi-transparent when collisions are disabled. -->
        <setting name="*ghostalpha" value="false"/>

        <!-- randommaps
                false   - Map vote at the end of each map.
                true    - Next map automatically selected. -->
        <setting name="*randommaps" value="false"/>

        <!-- statskey
                name    - Use player name to identify player for stats.
                serial  - Use player serial to identify player for stats. -->
        <setting name="*statskey" value="name"/>

        <!-- vehiclecolors
                file            - Use the server file: mods\deathmatch\vehiclecolors.conf
                random          - Use random colors. -->
        <setting name="*vehiclecolors" value="random"/>

        <!-- skins
                cj              - Use the main skin
                random          - Use a random skin.
                7 10 16-20 15   - Choose a random skin from the range list. (Example shown) -->
        <setting name="*skins" value="cj"/>

        <!-- vehicleweapons
                false   - Don't allow vehicle weapons.
                true    - Allow vehicle weapons. -->
        <setting name="*vehicleweapons" value="true"/>

        <!-- autopimp
                false   - Standard vehicles.
                true    - Apply a selection of visual upgrades to vehicles. -->
        <setting name="*autopimp" value="true"/>

        <!-- firewater
                false   - Player drowns in water.
                true    - Player explodes in water. -->
        <setting name="*firewater" value="false"/>

        <!-- cachemodels
                Note: This is an advanced setting. It should usually be enabled here, and disabled in each map that requires it.
                false   - Do not cache map models. Use this for maps which have problems being displayed correctly.
                true    - Cache map models to reduce lag-stutter effect. -->
        <setting name="*cachemodels" value="true"/>

        <!-- xxxx_map_can_override
                false   - Ignore setting in the map.
                true    - If the setting exists in the map, use that instead of the one in this file. -->
        <setting name="*ghostmode_map_can_override" value="true"/>
        <setting name="*skins_map_can_override" value="true"/>
        <setting name="*vehicleweapons_map_can_override" value="true"/>
        <setting name="*autopimp_map_can_override" value="true"/>
        <setting name="*firewater_map_can_override" value="true"/>
        <setting name="*cachemodels_map_can_override" value="true"/>

        <!-- xxxx_warning_if_map_override
                false   -
                true    - Issue a warning to players in the chatbox, if the map overrides the setting from this file. -->
        <setting name="*ghostmode_warning_if_map_override" value="true"/>
        <setting name="*vehicleweapons_warning_if_map_override" value="true"/>
    </settings>


    <!--
        Settings in the map files
        +++++++++++++++++++++++++
        To add the 'ghostmode','skins','vehicleweapons','autopimp','firewater' or 'cachemodels'
        setting to a map, insert (or update) a <settings...> section into the maps meta.xml file.
        For example:

        <settings>
            <setting name="*vehicleweapons" value="false"/>
            <setting name="*autopimp" value="false"/>
        </settings>
    -->

</meta>